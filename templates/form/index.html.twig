                            <option value="Menu Complet">Menu Complet (85‚Ç¨)</option>
                            <option value="Le Gourmand">Le Gourmand (60‚Ç¨)</option>
                            <option value="Le Brunch">Le Brunch (50‚Ç¨)</option>
                        </select>

                        <div class="checkbox-wrapper">
                            <input type="checkbox" id="wine-option" name="wine_option">
                            <label for="wine-option">
                                Ajouter l'Accord Mets & Vins
                                <span class="price-tag">(+25‚Ç¨ / pers)</span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="location">Salle / Lieu <span class="required-mark">*</span></label>
                        <input type="text" id="location" name="location" required>
                    </div>
                </fieldset>

                <details>
                    <summary>Le Petit Plus (Optionnel)</summary>
                    <div class="details-content">
                        <div class="grid-row">
