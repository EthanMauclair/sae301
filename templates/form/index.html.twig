                    </div>
                    <div class="ticket-row">
                        <span class="ticket-label">Date:</span>
                        <span class="ticket-value" id="ticket-date">---</span>
                    </div>
                    <div class="ticket-row">
                        <span class="ticket-label">Couverts:</span>
                        <span class="ticket-value" id="ticket-guests">2</span>
                    </div>
                    <div class="ticket-row">
                        <span class="ticket-label">Formule:</span>
                        <span class="ticket-value" id="ticket-service">---</span>
                    </div>
                    <div class="ticket-row" id="ticket-wine-row" style="display:none; color: #795548;">
                        <span class="ticket-label">+ Vins:</span>
                        <span class="ticket-value">OUI (+25‚Ç¨)</span>
                    </div>
                    <div class="ticket-row">
                        <span class="ticket-label">Lieu:</span>
                        <span class="ticket-value" id="ticket-location">---</span>
                    </div>

                    <div class="ticket-total-row">
                        <span>TOTAL EST.</span>
                        <span id="ticket-total">0 ‚Ç¨</span>
                    </div>

                    <div id="ticket-extras" class="ticket-notes" style="display:none;">
                        <strong>Notes cuisine :</strong><br>
                        <span id="ticket-notes-content"></span>
                    </div>
                </div>
                <div class="ticket-footer" style="margin-top:20px; text-align:center; border-top:1px dashed #000; padding-top:10px;">
                    <p id="ticket-id" style="font-size:0.7em; color:#999;">#CMD-XXXX</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        const hours = new Date().getHours();
        const title = document.getElementById('dynamic-title');
        const greeting = document.getElementById('dynamic-greeting');
        if (hours >= 5 && hours < 12) { title.innerText = "Le Petit D√©jeuner"; greeting.innerText = "La journ√©e commence bien avec une r√©servation."; }
        else if (hours >= 12 && hours < 15) { title.innerText = "Le D√©jeuner"; greeting.innerText = "Ici, on d√©taille les 3 menus avec un vocabulaire app√©tissant mais professionnel"; }
        else if (hours >= 18) { title.innerText = "Le D√Æner"; greeting.innerText = "Une soir√©e d'exception se pr√©pare."; }

        const inputs = {
            fullname: document.getElementById('fullname'),
            phone: document.getElementById('phone'),
            date: document.getElementById('date-rdv'),
            guests: document.getElementById('guests'),
            service: document.getElementById('service-type'),
            wine: document.getElementById('wine-option'),
            location: document.getElementById('location'),
            allergies: document.getElementById('allergies'),
            diet: document.getElementById('diet'),
            comments: document.getElementById('comments')
        };

        const ticketFields = {
            name: document.getElementById('ticket-name'),
            phone: document.getElementById('ticket-phone'),
            date: document.getElementById('ticket-date'),
            guests: document.getElementById('ticket-guests'),
            service: document.getElementById('ticket-service'),
            wineRow: document.getElementById('ticket-wine-row'),
            total: document.getElementById('ticket-total'),
            location: document.getElementById('ticket-location'),
            extrasContainer: document.getElementById('ticket-extras'),
            extrasContent: document.getElementById('ticket-notes-content')
        };

        const MENU_PRICES = {
            "Menu Complet": 85,
            "Le Gourmand": 60,
            "Le Brunch": 50
        };
        const WINE_PRICE = 25;

        function updateTicket(field, value) {
            if (ticketFields[field]) {
                ticketFields[field].innerText = value || '---';
                ticketFields[field].classList.remove('updated');
                void ticketFields[field].offsetWidth;
                ticketFields[field].classList.add('updated');
            }
        }

        function calculateTotal() {
            const nbGuests = parseInt(inputs.guests.value) || 0;
            const selectedMenu = inputs.service.value;
            const hasWine = inputs.wine.checked;

            let basePrice = MENU_PRICES[selectedMenu] || 0;

            if (hasWine) {
                basePrice += WINE_PRICE;
            }

            const total = basePrice * nbGuests;

            ticketFields.total.innerText = total + " ‚Ç¨";
            ticketFields.total.classList.remove('updated');
            void ticketFields.total.offsetWidth;
            ticketFields.total.classList.add('updated');
        }

        function updateExtras() {
            let notes = [];
            if(inputs.allergies.value) notes.push("‚ö†Ô∏è " + inputs.allergies.value);
            if(inputs.diet.value) notes.push("ü•ó " + inputs.diet.value);
            if(inputs.comments.value) notes.push("üìù " + inputs.comments.value);
            if (notes.length > 0) {
                ticketFields.extrasContainer.style.display = 'block';
                ticketFields.extrasContent.innerHTML = notes.join('<br>');
            } else { ticketFields.extrasContainer.style.display = 'none'; }
        }


        inputs.fullname.addEventListener('input', (e) => updateTicket('name', e.target.value));
        inputs.phone.addEventListener('input', (e) => updateTicket('phone', e.target.value));
        inputs.location.addEventListener('input', (e) => updateTicket('location', e.target.value));

        inputs.guests.addEventListener('input', (e) => {
            updateTicket('guests', e.target.value);
            calculateTotal();
        });

        inputs.service.addEventListener('change', (e) => {
            const text = e.target.options[e.target.selectedIndex].text;
            const cleanName = e.target.value ? e.target.value : '---';
            updateTicket('service', cleanName);
            calculateTotal();
        });

        inputs.wine.addEventListener('change', (e) => {
            if(e.target.checked) {
                ticketFields.wineRow.style.display = 'flex';
                ticketFields.wineRow.classList.add('updated');
            } else {
                ticketFields.wineRow.style.display = 'none';
            }
            calculateTotal();
        });

        inputs.date.addEventListener('change', (e) => {
            if(e.target.value) {
                const dateObj = new Date(e.target.value);
                const formatted = dateObj.toLocaleDateString('fr-FR', { day: 'numeric', month: 'numeric' }) + ' √† ' + dateObj.toLocaleTimeString('fr-FR', { hour: '2-digit', minute:'2-digit' });
                updateTicket('date', formatted);
            }
        });

        inputs.allergies.addEventListener('input', updateExtras);
        inputs.diet.addEventListener('input', updateExtras);
        inputs.comments.addEventListener('input', updateExtras);

        document.getElementById('ticket-id').innerText = '#CMD-' + Math.floor(Math.random() * 10000);

        calculateTotal();

        const form = document.getElementById('reservationForm');
        const dateInput = document.getElementById('date-rdv');
        const dateError = document.getElementById('date-error');
        const submitBtn = document.getElementById('submitBtn');
        const theTicket = document.getElementById('theTicket');
        const mainFormContainer = document.getElementById('mainFormContainer');
        const successMessage = document.getElementById('successMessage');

        form.addEventListener('submit', function(event) {
            event.preventDefault();

            let isValid = true;
            dateError.style.display = 'none';
            dateInput.setAttribute('aria-invalid', 'false');
            const selectedDate = new Date(dateInput.value);
            const now = new Date();

            if (dateInput.value && selectedDate <= now) {
                isValid = false;
                dateError.textContent = "Date invalide (pass√©e).";
                dateError.style.display = 'block';
                dateInput.setAttribute('aria-invalid', 'true');
            }

            if(isValid) {
                submitBtn.disabled = true;
                submitBtn.innerText = "Validation en cours...";
                setTimeout(() => { theTicket.classList.add('stamped'); }, 200);
                setTimeout(() => { theTicket.classList.add('sent'); }, 1000);
                setTimeout(() => {
                    mainFormContainer.classList.add('fade-out');
                    successMessage.classList.add('visible');
                }, 1500);
            }
        });
    </script>
{% endblock %}
