                            <input type="email" id="email" name="email" required placeholder="Pour la confirmation">
                        </div>
                        <div class="form-group">
                            <label for="phone">T√©l√©phone <span class="required-mark">*</span></label>
                            <input type="tel" id="phone" name="phone" required placeholder="06 00 00 00 00">
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>La Mise en Place</legend>
                    <div class="grid-row">
                        <div class="form-group">
                            <label for="date-rdv">Date <span class="required-mark">*</span></label>
                            <input type="datetime-local" id="date-rdv" name="date_rdv" required>
